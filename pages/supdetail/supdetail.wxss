.bg{
  width: 100%;
  display: flex;
  justify-content: center;
}
.bgView{
  width:702rpx;
  height: 674rpx; 
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  }
  .com{
    height: 82rpx;
  }
  .com text{
    color: white;
    line-height: 82rpx;
    font-size: 36rpx;
    margin-left: 20rpx;
  }
